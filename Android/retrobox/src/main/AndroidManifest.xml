<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.cegeka.retrobox">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="be.cegeka.retrobox.presentation.RetroBoxApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="be.cegeka.retrobox.presentation.overview.OverviewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.cegeka.retrobox.presentation.newretro.NewRetroActivity"
            android:label="@string/new_retro_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="be.cegeka.retrobox.presentation.AboutActivity"
            android:label="@string/about_about_cegeka"
            android:screenOrientation="portrait" />
        <activity
            android:name="be.cegeka.retrobox.presentation.newretro.selectactivity.SelectActivityActivity"
            android:label="@string/select_activity_title"
            android:screenOrientation="portrait" />
        <activity
            android:name="be.cegeka.retrobox.presentation.newretro.newactivity.NewActivityActivity"
            android:label="@string/new_activity_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>
