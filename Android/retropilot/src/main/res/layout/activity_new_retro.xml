<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.cegeka.retropilot.NewRetroActivity$PlaceholderFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/new_retro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/new_retro_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/new_retro_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start hour"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/new_retro_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place" />
</LinearLayout>
