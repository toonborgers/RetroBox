<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.cegeka.retropilot" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

    <activity
            android:name="be.cegeka.retropilot.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="be.cegeka.retropilot.InformationActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="be.cegeka.retropilot.OverviewActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="be.cegeka.retropilot.NewRetroActivity"
            android:label="@string/app_name"></activity>
    </application>

</manifest>
